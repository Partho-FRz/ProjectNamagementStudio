@model IEnumerable<EmsEntity.Project>
<!DOCTYPE html>

<html>
<head>

    <title>Account</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Bootstrap/style.css" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap.min.js" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap.bundle.js" rel="stylesheet" />
    <link href="~/Bootstrap/bootstrap.js" rel="stylesheet" />

    <style>
        table, th, td {
            border: 2px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5 px;
            text-align:center;
        }
    </style>


</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:52320/Project/ProjectCon"><</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:52320/Homepage">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:52320/News">News</a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link" href="http://localhost:52320/@Session["UserAcc"]">Account<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://localhost:52320/@Session["LogoutAcc"]">Log Out</a>
                </li>

            </ul>

        </div>
    </nav>
    <div>

        <form method="post">
            <table class="table">
                <tr>
                    <th>
                        Project name
                    </th>
                    <th>
                        Status
                    </th>

                    
                </tr>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @if (item.ProjectStatus == "Running")
                            {
                            <a href="http://localhost:52320/Project/ProjectDetails/@item.ProjectId" new { id = item.UserId }>@Html.DisplayFor(modelItem => item.Name)</a>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Name)
                            }
                        </td>
                        <td>
                            @if (item.ProjectStatus == "Running")
                            {
                            <a href="http://localhost:52320/Project/ProjectDetails/@item.ProjectId">@Html.DisplayFor(modelItem => item.ProjectStatus)</a>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.ProjectStatus)
                            }
                        </td>

                       
                    </tr>
                }

            </table>           

        </form>
    </div>
</body>
</html>
